! clear all CapsLock modifiers
clear Lock
! Set CapsLock to BackSpace
keycode 66 = BackSpace Delete Caps_Lock
! Add CapsLock modifier again
!add Lock = Caps_Lock

! Remove Shift_L and Alt_L
remove Shift = Shift_L
remove Mod1 = Alt_L 
! remap lAlt <-> lShift
keysym Alt_L = Shift_L
keysym Shift_L = Alt_L
! Add as modifiers again
add Shift = Shift_L
add Mod1 = Alt_L

! Move Menu -> Section.misc.key
keycode 49 = Menu NoSymbol Menu
! Cool to have a Mode_switch besides AltGr
keycode 135 = Mode_switch NoSymbol Mode_switch

! Move About
! h: 43 -> Left
keycode 43 Mod5 = h H Home Home Left Left
! j: 44 -> Up
keycode 44 Mod5 = j J Next Next Down Down
! k: 45 -> Down
keycode 45 Mod5 = k K Prior Prior Up Up
! l: 46 -> Right
keycode 46 Mod5 = l L End End Right Right
